<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="Enable Night Mode">
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="NIGHT"
            android:summaryOff="Night mode is deactivated"
            android:summaryOn="Night mode is activated"
            android:title="Night Mode"
            />
    </PreferenceCategory>
    <PreferenceCategory android:title="Game Settings">
        <ListPreference
            android:defaultValue="20"
            android:entries="@array/pref_game_time_titles"
            android:entryValues="@array/pref_game_time_values"
            android:key="GAMETIME"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:title="Game time" />
        <ListPreference
            android:defaultValue="2"
            android:entries="@array/pref_game_level_titles"
            android:entryValues="@array/pref_game_level_values"
            android:key="GAMELEVEL"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:title="Game level" />
    </PreferenceCategory>
</PreferenceScreen>